<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient_main">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Rocky bhai"
            android:textColor="#00BFA5"
            android:textStyle="bold"
            app:layout_heightPercent="4%"></TextView>

        <ImageView
            android:id="@+id/log_out"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/ic_logout"
            app:layout_heightPercent="4%"
            app:layout_widthPercent="8%"></ImageView>
        <View
            android:layout_above="@+id/book"
            android:elevation="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/history"
           android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#00BFA5"
            android:gravity="center"

            android:text="HISTORY"
            app:layout_widthPercent="48%"
            app:layout_heightPercent="7%"></TextView>

        <TextView
            android:id="@+id/book"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:text="BOOK"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_heightPercent="7%"
            app:layout_widthPercent="48%"></TextView>
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>