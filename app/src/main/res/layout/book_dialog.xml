<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:id="@+id/kid"
            android:layout_below="@+id/mail"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/age_deselect"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/kid"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="20sp"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="25%"/>
        <TextView
            android:id="@+id/adult"
            android:layout_toRightOf="@+id/kid"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/age_deselect"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/adult"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="20sp"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="25%"/>

        <TextView
            android:id="@+id/elderly"
            android:layout_toRightOf="@+id/adult"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/age_deselect"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/elderly"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="20sp"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="30%"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/kid"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edit_t_bg"
            android:drawableRight="@drawable/ic_cal"
            android:elevation="2dp"
            android:fontFamily="@font/urbanist_bold"
            android:gravity="center"
            android:hint="dd/mm/yy"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="50%" />

        <TextView
            android:layout_toRightOf="@+id/date"
            android:layout_below="@+id/kid"
            android:id="@+id/time"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/edit_t_bg"
            android:elevation="2dp"
            android:gravity="center"
            android:hint="hh:mm"
            android:drawableRight="@drawable/ic_time"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="20sp"
            app:layout_heightPercent="5%"
            app:layout_widthPercent="50%"/>

        <TextView
            android:id="@+id/stat"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/tell_us_your_problem"
            android:textSize="16sp"
            android:fontFamily="@font/urbanist_semibold"
            android:layout_below="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:lines="8"
            android:fontFamily="@font/urbanist_semibold"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:layout_below="@+id/stat"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/input_field"
            android:hint="@string/describe_your_problem_here"
            android:textColor="@color/black" />

        <TextView
            android:layout_below="@+id/problem"
            android:id="@+id/book"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/text_bg"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/book_appointment"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/urbanist_bold"
            android:textStyle="bold"
            app:layout_heightPercent="7%"
            app:layout_widthPercent="100%" android:layout_height="60dp" android:layout_width="300dp"/>




    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.cardview.widget.CardView>