<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_diagnois">


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Rocky bhai (adult)."
            android:textColor="#00BFA5"

            app:layout_heightPercent="4%"/>
        <TextView
            android:id="@+id/t"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
              android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Problem:"
            android:textColor="#000000"
           android:textStyle="bold"
            app:layout_heightPercent="3%"/>
        <TextView

            android:layout_below="@+id/t"
            android:background="@drawable/edit_t_bg"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/problem"
            android:layout_width="match_parent"

            android:gravity="top|start"
            android:minHeight="200dp"
            android:text="I suffering thoug intense paint in front teeth, and even some jaw bleedning dsf dsjfhj kjsafd "
            android:textColor="#000000"
            android:elevation="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/d"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/problem"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Advice:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_heightPercent="3%"/>
        <EditText

            android:layout_below="@+id/d"
            android:background="@drawable/edit_t_bg"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/advice"
            android:layout_width="match_parent"

            android:gravity="top|start"
            android:minHeight="200dp"
            android:text="I suffering thoug intense paint in front teeth, and even some jaw bleedning dsf dsjfhj kjsafd "
            android:textColor="#000000"
            android:elevation="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_marginStartPercent="15%"
            android:layout_marginTop="20dp"
            android:id="@+id/cam"
            android:layout_below="@+id/advice"
            android:src="@drawable/ic_cam"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="10%"
            />
        <ImageView
            android:id="@+id/pic"
            app:layout_marginStartPercent="20%"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/cam"
            android:layout_below="@+id/advice"
            android:src="@mipmap/ic_launcher"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="10%"
            />
        <TextView
            android:elevation="10dp"
            android:textStyle="bold"
            android:background="@drawable/text_bg"
            android:layout_below="@+id/pic"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/diagnois"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="DIAGNOIS"
            android:textColor="#FFFFFF"

            app:layout_heightPercent="4%"/>
    </androidx.percentlayout.widget.PercentRelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>