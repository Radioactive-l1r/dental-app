<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_diagnois">


    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginHorizontal="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Rocky bhai (adult)."
            android:textColor="#00BFA5"

            app:layout_heightPercent="4%"/>

        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_below="@+id/name"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="21dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Problem:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_heightPercent="3%" />

        <TextView

            android:layout_below="@+id/t"
            android:background="@drawable/edit_t_bg"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/problem"
            android:layout_width="match_parent"

            android:gravity="top|start"
            android:minHeight="200dp"
            android:text="I suffering thoug intense paint in front teeth, and even some jaw bleedning dsf dsjfhj kjsafd "
            android:textColor="#000000"
            android:elevation="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_below="@+id/problem"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="28dp"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:text="Advice:"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_heightPercent="3%" />

        <EditText

            android:layout_below="@+id/d"
            android:background="@drawable/edit_t_bg"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/advice"
            android:layout_width="match_parent"

            android:gravity="top|start"
            android:minHeight="200dp"
            android:text="I suffering thoug intense paint in front teeth, and even some jaw bleedning dsf dsjfhj kjsafd "
            android:textColor="#000000"
            android:elevation="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/pic"
            android:layout_below="@+id/advice"
            android:layout_marginStart="-62dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/upload"
            android:layout_toRightOf="@+id/cam"
            android:src="@mipmap/ic_launcher"
            app:layout_heightPercent="10%"
            app:layout_marginStartPercent="20%"
            app:layout_widthPercent="20%" />

        <TextView
            android:id="@+id/diagnois"
            android:layout_width="match_parent"
            android:layout_below="@+id/upload"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="35dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/text_bg"
            android:elevation="10dp"
            android:gravity="center"
            android:text="DIAGNOIS"
            android:textColor="#FFFFFF"

            android:textStyle="bold"
            app:layout_heightPercent="4%" />

        <TextView
            android:id="@+id/upload"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advice"
            android:layout_marginTop="31dp"
            android:background="@color/grey"
            android:gravity="center"
            android:text="upload"
            android:textColor="@color/light"
            android:textStyle="bold"
            app:layout_heightPercent="5%"
            app:layout_marginStartPercent="10%"
            app:layout_widthPercent="25%" />
    </androidx.percentlayout.widget.PercentRelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>