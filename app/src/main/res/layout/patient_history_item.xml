<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:backgroundTint="@color/light"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_del" />

        <TextView
            android:id="@+id/time_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:text="12/22/12 - 12:21 pm"
            android:textColor="@color/black"
            android:fontFamily="@font/urbanist_bold"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_date"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:text="dasd dasd  fasd asdda dsa  adasd dsada da das das das das da sdsadasda"
            android:textColor="@color/black"
            android:fontFamily="@font/urbanist_semibold"/>

        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_bg"
            android:fontFamily="@font/urbanist_semibold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/leave_a_review"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/moreInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/more"
            android:textColor="@color/high"
            android:fontFamily="@font/urbanist_semibold"
            android:textSize="16sp"/>
    </androidx.percentlayout.widget.PercentRelativeLayout>

</androidx.cardview.widget.CardView>